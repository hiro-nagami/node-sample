{
  "name": "node-sample",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "ssh://git@github.com/hiro-nagami/node-sample.git",
  "scripts": {
    "clean": "rimraf dist/*",
    "cp-files": "cp -r src/resources dist/",
    "tsc": "tsc -p tsconfig.json",
    "alias": "tsc-alias -p tsconfig.json",
    "build": "npm-run-all clean cp-files tsc alias",
    "//dev": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"npm run watch\"",
    "watch": "nodemon --watch './**/*.{ts,graphql}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-resolvers": "2.5.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.19",
    "apollo": "^2.33.9",
    "grpc-tools": "^1.11.2",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.5.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.5.5",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "google-protobuf": "^3.19.4",
    "graphql": "^16.3.0"
  }
}